{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body{
            background-image: url("{{ asset('assets/img/background_homepage2.jpg') }}");
            background-size: cover;
            background-repeat: no-repeat;
        }
        #topbarsearch {
            display: none;
        }
        #lowBarSearch {
            display: none;
        }
        #navBar {
            background-color: RGBA(0,0,0,0);
        }

    </style>
{% endblock %}
{% block title %}{{ parent() }} - Home {% endblock %}
{% block body %}
    <div id="home">
        <div class="row">
                    <h1 class="center-align col s10 m6 offset-s1 offset-m3">Marketing automation : d√©couvrez tous les logiciels</h1>
        </div>
            <div class="row center-align">
                <div class="col s12 m8 offset-m2 l6 offset-l3 ">
                    <div class="card-panel" id="searchBar">
                        <form id="search-site" action='search' method='get'>
                            <div class="input-group">
                                <input id="search" type="search" name='search'
                                       placeholder="Ex: Mailchimp, envoi de sms...">
                                <a href="{{ path('results') }}" class="btn-large"><i class="large material-icons right">search</i>Rechercher</a>
                            </div>
                        </form>
                    </div>
                </div>
        </div>
    </div>
{% endblock %}
