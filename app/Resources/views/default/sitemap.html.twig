<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for url in urls %}
        <url>
            {% if url.loc is defined %}
            <loc>{{ app.request.schemeAndHttpHost }}{{ url.loc }}</loc>
            {% endif %}
            {% if url.route is defined %}
                <loc>{{ app.request.schemeAndHttpHost }}{{ url.route }}</loc>
            {% endif %}
        </url>
    {% endfor %}
</urlset>